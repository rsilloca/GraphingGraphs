<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".GenerateTree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            style="@style/mediumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="BÃºsqueda a lo:" />

        <Spinner
            android:id="@+id/opciones"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/deshacer"
            style="@style/buttonRound"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_undo_white_48dp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp" />

        <ImageButton
            android:id="@+id/rehacer"
            style="@style/buttonRound"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_redo_white_48dp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp" />

        <ImageButton
            android:id="@+id/clear"
            style="@style/buttonRound"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clear_white_48dp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/generarArbol"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            android:background="@drawable/redondeado_image_buttons"
            android:backgroundTint="@color/violetLigth"
            android:text="General Arbol"
            android:textColor="@color/white" />

    </LinearLayout>

    <com.pandita.graphinggraphs.Drawing
        android:id="@+id/viewDrawing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:backgroundTint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pincel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/paint_brush_white"
            android:background="@drawable/redondeado_brush_black"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"/>

        <ImageButton
            android:id="@+id/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/red" />

        <ImageButton
            android:id="@+id/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="@color/blue" />

    </LinearLayout>

</LinearLayout>